#!/bin/bash

GITLAB_MIRROR_USER="${GITLAB_MIRROR_USER:-git}"
GITLAB_MIRROR_UID="${GITLAB_MIRROR_UID:-1000}"
GITLAB_MIRROR_INSTALL_DIR="${GITLAB_MIRROR_INSTALL_DIR:-/opt/gitlab-mirror}"
GITLAB_MIRROR_HOME="${GITLAB_MIRROR_HOME:-/config}"
GITLAB_MIRROR_REPO_DIR="${GITLAB_MIRROR_REPO_DIR:-/data}"
GITLAB_MIRROR_COLORS="${GITLAB_MIRROR_COLORS:-true}"
GITLAB_MIRROR_SVN_OPTIONS="${GITLAB_MIRROR_SVN_OPTIONS:--s}"
GITLAB_MIRROR_NO_CREATE_SET="${GITLAB_MIRROR_NO_CREATE_SET:-false}"
GITLAB_MIRROR_NO_REMOTE_SET="${GITLAB_MIRROR_NO_REMOTE_SET:-false}"
GITLAB_MIRROR_FORCE_UPDATE="${GITLAB_MIRROR_FORCE_UPDATE:-false}"
GITLAB_MIRROR_PRUNE_MIRRORS="${GITLAB_MIRROR_PRUNE_MIRRORS:-false}"

# Gitlab
GITLAB_MIRROR_GITLAB_NAMESPACE="${GITLAB_MIRROR_GITLAB_NAMESPACE:-Mirrors}"
#GITLAB_MIRROR_GITLAB_URL="${GITLAB_MIRROR_GITLAB_URL:-https://gitlab.example.com}"
GITLAB_MIRROR_GITLAB_USER="${GITLAB_MIRROR_GITLAB_USER:-$GITLAB_MIRROR_USER}"
GITLAB_MIRROR_SSL_VERIFY="${GITLAB_MIRROR_SSL_VERIFY:-true}"
GITLAB_MIRROR_HTTP_REMOTE="${GITLAB_MIRROR_HTTP_REMOTE:-false}"

GITLAB_MIRROR_NEW_ISSUES_ENABLED="${GITLAB_MIRROR_NEW_ISSUES_ENABLED:-false}"
GITLAB_MIRROR_NEW_WALL_ENABLED="${GITLAB_MIRROR_NEW_WALL_ENABLED:-false}"
GITLAB_MIRROR_NEW_WIKI_ENABLED="${GITLAB_MIRROR_NEW_WIKI_ENABLED:-false}"
GITLAB_MIRROR_NEW_SNIPPETS_ENABLED="${GITLAB_MIRROR_NEW_SNIPPETS_ENABLED:-false}"
GITLAB_MIRROR_NEW_MERGE_REQUESTS_ENABLED="${GITLAB_MIRROR_NEW_MERGE_REQUESTS_ENABLED:-false}"
GITLAB_MIRROR_NEW_PUBLIC="${GITLAB_MIRROR_NEW_PUBLIC:-false}"
